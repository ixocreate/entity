{
    "name": "ixocreate/entity-package",
    "description": "IXOCREATE Entity package",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "IXOCREATE",
            "email": "opensource@ixocreate.com",
            "homepage": "https://www.ixocreate.com",
            "role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.2 || ^8.0",
        "ixocreate/application": "^0.3.0",
        "ixocreate/collection": "^0.2",
        "ixocreate/schema-package": "^0.3.0",
        "laminas/laminas-filter": "^2.7"
    },
    "require-dev": {
        "ixocreate/coding-standard": "^2.0",
        "ixocreate/test": "^0.2",
        "phpbench/phpbench": "@dev"
    },
    "autoload": {
        "psr-4": {
            "Ixocreate\\Entity\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ixocreate\\Test\\Entity\\": "tests/src/",
            "Ixocreate\\Misc\\Entity\\": "tests/misc/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "fix-cs": "vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --config vendor/ixocreate/coding-standard/.php_cs"
    }
}
